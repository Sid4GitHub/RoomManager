<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sid.roommanager.BtIns">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic"
        android:id="@+id/bt_basic" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_basic"
        android:text="Color Picker"
        android:id="@+id/bt_col_ch" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_col_ch"
        android:text="LED Animation"
        android:id="@+id/bt_ran_col" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_ran_col"
        android:text="Cam"
        android:id="@+id/bt_cam" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_cam"
        android:text="Alarm"
        android:id="@+id/bt_al" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_al"
        android:text="Voice Op"
        android:id="@+id/bt_voi" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_voi"
        android:text="Sync Time"
        android:id="@+id/bt_time_sync" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_time_sync"
        android:text="New Device"
        android:id="@+id/bt_new_scan" />

</RelativeLayout>
